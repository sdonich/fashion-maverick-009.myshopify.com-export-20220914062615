{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "vendor": {
          "type": "text",
          "settings": {
            "text": "{{ product.vendor }}",
            "text_style": "uppercase"
          }
        },
        "title": {
          "type": "title",
          "settings": {
          }
        },
        "caption": {
          "type": "text",
          "settings": {
            "text": "{{ product.metafields.descriptors.subtitle.value }}",
            "text_style": "subtitle"
          }
        },
        "price": {
          "type": "price",
          "settings": {
          }
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
          }
        },
        "quantity_selector": {
          "type": "quantity_selector",
          "settings": {
          }
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
          }
        },
        "description": {
          "type": "description",
          "settings": {
          }
        },
        "collapsible-row-0": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Ingredients",
            "icon": "apple"
          }
        },
        "collapsible-row-1": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Nutritional info",
            "icon": "heart"
          }
        },
        "collapsible-row-2": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Shipping",
            "icon": "truck"
          }
        },
        "share": {
          "type": "share",
          "settings": {
          }
        }
      },
      "block_order": [
        "vendor",
        "title",
        "caption",
        "price",
        "variant_picker",
        "quantity_selector",
        "buy_buttons",
        "description",
        "collapsible-row-0",
        "collapsible-row-1",
        "collapsible-row-2",
        "share"
      ],
      "settings": {
        "gallery_layout": "thumbnail_slider",
        "media_size": "small",
        "padding_bottom": 16
      }
    },
    "image-with-text": {
      "type": "image-with-text",
      "blocks": {
        "image-with-text__heading": {
          "type": "heading",
          "settings": {
          }
        },
        "image-with-text__text": {
          "type": "text",
          "settings": {
          }
        }
      },
      "block_order": [
        "image-with-text__heading",
        "image-with-text__text"
      ],
      "settings": {
        "layout": "text_first",
        "desktop_content_position": "middle",
        "padding_top": 0
      }
    },
    "image-banner": {
      "type": "image-banner",
      "blocks": {
        "image-banner__heading": {
          "type": "heading",
          "settings": {
          }
        },
        "image-banner__text": {
          "type": "text",
          "settings": {
          }
        }
      },
      "block_order": [
        "image-banner__heading",
        "image-banner__text"
      ],
      "settings": {
        "image_height": "small",
        "color_scheme": "background-1"
      }
    },
    "featured-blog": {
      "type": "featured-blog",
      "settings": {
        "show_view_all": false,
        "padding_top": 24,
        "padding_bottom": 0
      }
    },
    "newsletter": {
      "type": "newsletter",
      "blocks": {
        "newsletter-heading": {
          "type": "heading",
          "settings": {
          }
        },
        "newsletter-paragraph": {
          "type": "paragraph",
          "settings": {
          }
        },
        "newsletter-email_form": {
          "type": "email_form",
          "settings": {
          }
        }
      },
      "block_order": [
        "newsletter-heading",
        "newsletter-paragraph",
        "newsletter-email_form"
      ],
      "settings": {
        "color_scheme": "background-2",
        "full_width": false,
        "padding_top": 40,
        "padding_bottom": 52
      }
    },
    "product-recommendations": {
      "type": "product-recommendations",
      "settings": {
        "padding_top": 32,
        "padding_bottom": 64
      }
    }
  },
  "order": [
    "main",
    "image-with-text",
    "image-banner",
    "featured-blog",
    "newsletter",
    "product-recommendations"
  ]
}